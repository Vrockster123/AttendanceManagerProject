<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/subject_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:paddingTop="1dp"
            android:text="Mathematics"
            android:textColor="#DE000000"
            android:textSize="32sp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <TextView
            android:id="@+id/classesAttendedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subject_name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:text="Attendance: "
            android:textColor="#8A000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/classes_Attended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subject_name"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/classesAttendedText"
            android:text="20"
            android:textSize="24dp" />
        <TextView
            android:id="@+id/forwardslash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subject_name"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/classes_Attended"
            android:text="/"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/total_attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subject_name"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/forwardslash"
            android:text="25"
            android:textSize="24dp" />
        </LinearLayout>
        <!--
            <TextView
                  android:id="@+id/percent"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="16dp"
                  android:text="75"
                  android:textColor="#8A000000"
                  android:textSize="40sp"
                  /> -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <Button
            android:id="@+id/attendance_decrease"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/classesAttendedText"
            android:layout_marginLeft="16dp"
            android:text="-"
            android:textColor="#8A000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/attendance_increase"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view"
            android:layout_below="@id/classesAttendedText"
            android:layout_toRightOf="@id/attendance_decrease"
            android:text="+"
            android:textColor="#8A000000"
            android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
        <!--   <TextView
               android:layout_weight="0"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="75"
               android:textSize="42dp"
               /> -->
    <com.github.lzyzsd.circleprogress.DonutProgress
        android:layout_gravity="center_vertical"
        android:id="@+id/donut_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:donut_progress="30"/>
</LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/attendance_decrease"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="1dp"
        android:background="#9e9e9e" />
</LinearLayout>

